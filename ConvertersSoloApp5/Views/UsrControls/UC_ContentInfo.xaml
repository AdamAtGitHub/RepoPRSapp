<UserControl
    x:Class="Views.UsrControls.UC_ContentInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <Image x:Name="imgAllThreeMedTypes"
                   Source="/Assets/Images/All-Three-01.png"
                   HorizontalAlignment="Left"
                   Height="125" Width="125"
                   Margin="5 0"/>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="lblContentPlayTime"
                       Text="8:30:00AM"
                       FontSize="16" Foreground="DodgerBlue"/>
                <TextBlock x:Name="lblContentName"
                       Text="Day Part 1"
                       FontSize="16" Foreground="DodgerBlue"
                       Margin="10 0 0 0"/>
            </StackPanel>
            <TextBlock x:Name="lblContentFileName"
                   Text="10_DayPart1.xml"
                   FontSize="16" Foreground="DodgerBlue"/>
        </StackPanel>
    </StackPanel>
</UserControl>
